{
  "name": "website-blog",
  "description": "My personal blog website.",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "debug": "NODE_OPTIONS='--inspect' next dev",
    "dependenciesUpdate": "npm list -g npm-check-updates && ncu -u",
    "prettier": "prettier --write '**/*.{ts,js,css,html}'",
    "checkLinks": "broken-link-checker https://blog.metinyazici.org -ro --user-agent 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/74.0.3729.131 Safari/537.36'",
    "killDev": "kill $(lsof -i :3000 | awk '$1 == \"node\" { print $2 }')",
    "listVercelDeployments": "vercel ls website-blog",
    "removeVercelDeployment": "vercel rm $previewUrl"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.5",
    "globby": "^11.0.3",
    "gray-matter": "^4.0.3",
    "next": "10.2.0",
    "next-mdx-remote": "^2.1.4",
    "next-themes": "0.0.14",
    "postcss": "^8.2.13",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0",
    "reading-time": "^1.3.0",
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "broken-link-checker": "*",
    "current-git-branch": "*",
    "prettier": "*",
    "vercel": "*"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false
  }
}
